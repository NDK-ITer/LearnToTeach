        {
          "Host": "localhost",
          "Port": 9001
        }
      ],
      "DownstreamPathTemplate": "/api/Account/verify-account",
      "DownstreamScheme": "https"
    },
    {
      //change-password
      "UpstreamPathTemplate": "/account/change-password",
      "UpstreamHttpMethod": [ "Post" ],
