        {
          "Host": "localhost",
          "Port": 9001
        }
      ],
      "DownstreamPathTemplate": "/api/Account/confirm-email",
      "DownstreamScheme": "https"
    },
    {
      //verify-account
      "UpstreamPathTemplate": "/account/verify-account",
      "UpstreamHttpMethod": [ "Post" ],
