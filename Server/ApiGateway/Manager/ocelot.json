{
  "Routes": [
    //UserService Web Api
    {
      //login
      "UpstreamPathTemplate": "/account/login",
      "UpstreamHttpMethod": [ "Post" ],
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 9001
        }
      ],
      "DownstreamPathTemplate": "/api/Account/Login",
      "DownstreamScheme": "https"
    },
    
    //ClassroomService Web Api
    {
      "UpstreamPathTemplate": "/classroom/public",
      "UpstreamHttpMethod": [ "Get" ],
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 9002
        }
      ],
      "DownstreamPathTemplate": "/api/Classroom/public",
      "DownstreamScheme": "https",
      //Authentication
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      },
      //Allow role with "USER"
      "RouteClaimsRequirement": {
        "Role": "USER"
      }
    }

  ],
  "GlobalConfiguration": {
    "BaseUrl": "https://localhost:9004"
  }
}